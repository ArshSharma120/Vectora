{
  "manifest_version": 3,
  "name": "Vectora AI Check",
  "version": "2.0.0",
  "description": "Right-click to check AI authenticity of text and images using Cerebras, Gemini, or Groq.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_page": "options.html",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}